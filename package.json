{
  "name": "@jbcom/strata-examples",
  "version": "1.0.0",
  "private": true,
  "description": "Example applications for Strata 3D",
  "repository": {
    "type": "git",
    "url": "https://github.com/jbcom/nodejs-strata-examples"
  },
  "author": "Jon Bogaty <jon@jonbogaty.com>",
  "license": "MIT",
  "scripts": {
    "build": "pnpm -r build",
    "build:all": "pnpm build && node scripts/collect-dist.js",
    "dev": "pnpm -r dev",
    "dev:terrain": "pnpm --filter basic-terrain dev",
    "dev:water": "pnpm --filter water-scene dev",
    "dev:sky": "pnpm --filter sky-volumetrics dev",
    "dev:vegetation": "pnpm --filter vegetation-showcase dev",
    "dev:api": "pnpm --filter api-showcase dev",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "test:visual": "playwright test",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@dimforge/rapier3d-compat": "^0.19.3",
    "@playwright/test": "^1.57.0",
    "@react-three/postprocessing": "^3.0.4",
    "@react-three/rapier": "^2.2.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/npm": "^13.1.3",
    "@types/node": "^25.0.3",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "husky": "^9.1.7",
    "postprocessing": "^6.38.2",
    "semantic-release": "^25.0.2",
    "semantic-release-monorepo": "^8.0.2",
    "typescript": "^5.7.2",
    "yuka": "^0.7.8"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "18.3.12",
      "@types/react-dom": "18.3.1"
    }
  }
}
